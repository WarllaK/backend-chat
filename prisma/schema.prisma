generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  sentMessages  Message[] @relation("AuthorMessages")
  recivedMessages  Message[] @relation("ReciverMessages")
}

model Message {
  id        String      @id @default(uuid())
  content   String
  author      User     @relation("AuthorMessages", fields: [authorId], references: [id])
  authorId    String
  reciver    User      @relation("ReciverMessages", fields: [reciverId], references: [id])
  reciverId  String
  createdAt DateTime @default(now())
}